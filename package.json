{
  "name": "simple-graphql",
  "version": "1.0.0",
  "description": "Simple backend using GraphQL",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "build": "tsc",
    "build:dev": "ts-node-dev --files src/server.ts -e ts,graphql",
    "start": "ts-node-dev modules/gateway/src/server.ts",
    "start:graphs": "concurrently -k npm:server:*",
    "server:user": "ts-node-dev modules/user/src/server.ts",
    "server:foods": "ts-node-dev modules/foods/src/server.ts"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "serverless-plugin-typescript": "^2.1.4",
    "typescript": "^5.1.6"
  }
}
